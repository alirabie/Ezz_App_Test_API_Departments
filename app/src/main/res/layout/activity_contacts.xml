<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="examplewtest.midopc.ezzappdepartments.Contacts"
    android:background="#ffffff">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/img_header"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/cc" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/img_header"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="29dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/infotxt"
            android:layout_below="@+id/phonetxt"
            android:layout_alignRight="@+id/phonetxt"
            android:layout_alignEnd="@+id/phonetxt"
            android:gravity="center"
            android:padding="4dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:paddingBottom="2dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/adresstxt"
            android:layout_below="@+id/img_header"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:padding="4dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/emailtxt"
            android:layout_below="@+id/adresstxt"
            android:layout_alignLeft="@+id/adresstxt"
            android:layout_alignStart="@+id/adresstxt"
            android:gravity="center"
            android:padding="4dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/phonetxt"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/emailtxt"
            android:layout_alignStart="@+id/emailtxt"
            android:gravity="center"
            android:padding="4dp" />

    </LinearLayout>

</RelativeLayout>
